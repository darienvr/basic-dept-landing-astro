---
    const { text } = Astro.props;
---

<a href="#">{text}</a>


<style>
    a {
        display: inline-block;
        font-size: 0.7rem;
        border-radius: 15px;
        border: 1px solid #000;
        text-transform: uppercase;
        padding: 7px 30px;
        text-decoration: none;
        font-weight: bold;
        color: #000;
        transition: all 0.5s;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

    a::after {
        content: '';
        position:absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #f4f4f4;
        border-radius: 15px;
        z-index: -2;
    }

    a::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 0%;
        background-color: #000;
        transition: all .3s;
        z-index: -1;
    }

    a:hover {
        background-color: #000;
        color: #f4f4f4;
    }

    a:hover::before {
        height: 100%;
    }

</style>