---
    const { text } = Astro.props;
---

<a href="#">{text}</a>


<style>
    a {
        display: inline-block;
        font-size: 0.7rem;
        border-radius: 15px;
        border: 1px solid var(--text-color);;
        text-transform: uppercase;
        padding: 7px 30px;
        text-decoration: none;
        font-weight: bold;
        color: var(--text-color);
        position: relative;
        overflow: hidden;
        z-index: 1;
        transition: color 1s;
    }

    a::after {
        content: '';
        position:absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--background-color);
        border-radius: 15px;
        z-index: -2;
    }

    a::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 0%;
        background-color: var(--text-color);
        transition: all .3s;
        z-index: -1;
    }

    a:hover {
        color: var(--background-color);
    }

    a:hover::before {
        height: 100%;
    }

</style>