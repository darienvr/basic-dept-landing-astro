---
import News from "./News.astro";
---

<section>
    <header>
        <h3>Featured news</h3>
        <a href="#">View all</a>
    </header>
    <div>
        <News />
        <News />
        <News />
    </div>
</section>

<style>

    section {
        padding: 0 80px;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 50px 0;
    }

    h3 {
        width: 300px;
        font-size: 2.5rem;
        text-transform: uppercase;
    }

    a {
        font-size: 0.7rem;
        border-radius: 15px;
        border: 2px solid #000;
        text-transform: uppercase;
        padding: 5px 30px;
        text-decoration: none;
        font-weight: bold;
        color: #000;
        transition: all 0.5s;
    }

    a:hover {
        background-color: #000;
        color: #f4f4f4;
    }

</style>