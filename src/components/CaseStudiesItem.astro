---
const { title, subtitle } = Astro.props;
---


<div class="case-studies-item">
    <div class="image-container">
        <slot name="picture" />
    </div>
        <h2>{title}</h2>
        <p>{subtitle}</p>
    </div>
</div>

<style>
    
    .case-studies-item {
        text-transform: uppercase;
        display: flex;
        flex-direction: column;
        gap: 15px;
        color: var(--text-color);
    }

    .case-studies-item p {
        font-weight: 500;
        width: 50%;
        font-size: 14px;
    }

    .case-studies-item:hover h2 {
        text-decoration:underline;
    }

    .image-container {
        overflow: hidden;
        height: auto;
    }

    .case-studies-item:hover slot {
        transform: scale(1);
    }

    @media (max-width: 1280px){

        .case-studies-item p {
            width: 90%;
        }

        .image-container {
            width: 400px;
        }
    }

</style>