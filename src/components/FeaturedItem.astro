---
const { url, title, text } = Astro.props;
---

<div class="featured-item">
    <img src={url} alt="#" loading="lazy" />
    <div>
        <span />
        <h3>{title}</h3>
        <p>{text}</p>
    </div>
</div>

<style>

    .featured-item {
        min-width: 435px;
        height: auto;
        margin-bottom: 20px;
    }

    img {
        max-width: 200px;
        height: 40px;
    }

    span {
        display: inline-block;
        width: 20px;
        height: 2.5px;
        background-color: var(--text-color);
    }

    h3 {
        padding: 60px 0 10px 0;
        font-size: 1.5rem;
        text-transform: uppercase;
        color: var(--text-color);
    }

    p{
        font-size: 1.1rem;
        width: 330px;
    }

</style>